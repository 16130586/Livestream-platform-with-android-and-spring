<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:layout_margin="5dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/thumbail_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/ic_videocam"
            />

        <TextView
            android:id="@+id/stream_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbail_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#FF0303"
            android:text="Đang live"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/stream_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/thumbail_image"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/stream_status"

            android:text="Hôm nay tôi buồn rất nhiều nha"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_live"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/stream_status"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:text="Huỳnh Anh"
             android:textSize="16sp" />
    <TextView
        android:id="@+id/view_numer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/stream_title"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/user_live"
        android:text="106565 lượt xem"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>