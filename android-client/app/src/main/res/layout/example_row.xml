<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip">

    <ImageView
        android:id="@+id/example_icon"
        android:contentDescription="@string/info_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        android:paddingStart="0dip"
        android:paddingEnd="15dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/example_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_item_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/example_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_item_description" />

    </LinearLayout>

</LinearLayout>