<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_watched_stream_thumbail_image"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/background_channel" />

    <TextView
        android:id="@+id/item_watched_stream_name"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/item_watched_stream_thumbail_image"
        android:text=""/>

    <TextView
        android:id="@+id/item_watched_stream_owner_name"
        android:layout_below="@id/item_watched_stream_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/item_watched_stream_thumbail_image"
        android:textSize="14sp"
        android:layout_width="100dp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:text=""/>

</RelativeLayout>
