<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_stream_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="220dp" />
    <TextView
        android:id="@+id/text_live_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_stream_thumbnail"
        android:layout_alignTop="@+id/item_stream_thumbnail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:text="Live NOW"
        android:textStyle="bold"
        android:background="@color/red"
        android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_small">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_stream_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_medium"
            />

        <LinearLayout
            android:layout_marginStart="@dimen/dp_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_stream_avatar"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_stream_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_stream_time_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_super_small"
                android:textColor="#535353"

                />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_small"
        android:layout_marginBottom="5dp" />
</LinearLayout>
