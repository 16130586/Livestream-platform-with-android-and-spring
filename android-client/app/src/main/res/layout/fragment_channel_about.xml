<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/background_channel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/background_channel"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/info_channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/channel_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            app:civ_circle_background_color="#6B323D"
            android:src="@drawable/ic_fire"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />



        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"

            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/channel_image"
            android:text="SKT T1 Faker "/>

        <TextView
            android:id="@+id/channel_sub_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/channel_image"
            android:layout_below="@id/channel_name"
            android:textSize="18sp"
            android:text="303.000 người đăng ký"/>

        <Button
            android:id="@+id/subscrible"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/channel_sub_number"
            android:layout_toRightOf="@id/channel_image"
            android:background="#FFFFFF"
            android:text="Đăng ký"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/block"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/channel_sub_number"
            android:layout_toRightOf="@id/subscrible"
            android:background="#FFFFFF"
            android:text="Chặn kênh"
            android:textColor="#FF0000"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/about_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Giới thiệu kênh"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_channel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/about_title"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="Chủ đề Stream : "/>

        <TextView
            android:id="@+id/channel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title_channel_type"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="Gaming , Hài Kịch , Gải Trí"/>

        <TextView
            android:id="@+id/description"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/channel_type"
            android:textSize="20sp"
            android:text="Chúng tôi là SKT T1 thành lập từ những năm 190090909090990190090909090990"/>


    </RelativeLayout>


</LinearLayout>